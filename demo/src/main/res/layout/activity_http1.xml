<?xml version="1.0" encoding="utf-8"?>
<com.ruitu.arad.support.widget.progress.ProgressRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.Http1Activity">

    <include
        android:id="@+id/header"
        layout="@layout/header_layout" />

    <TextView
        android:id="@+id/tv_ver_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:padding="10dp"
        android:text=""
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nav"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#11666666"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="导    航"
            android:textColor="#222222"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#11666666"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="定位权限"
            android:textColor="#222222"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_activity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="#11666666"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="列表activity"
            android:textColor="#222222"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_fragment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#11666666"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="列表fragment"
            android:textColor="#222222"
            android:textSize="12sp" />
    </LinearLayout>
</com.ruitu.arad.support.widget.progress.ProgressRelativeLayout>