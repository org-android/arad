<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/header"
        layout="@layout/header_layout" />

    <LinearLayout
        android:id="@+id/ll_menu1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/header"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_1"
            style="@style/main_menu_item_style">

            <ImageView
                style="@style/main_menu_icon_style"
                android:src="@mipmap/player1" />

            <TextView
                style="@style/main_menu_txt_style"
                android:text="播放器" />
        </LinearLayout>

        <View style="@style/my_divider_vertical_1dp" />

        <LinearLayout
            android:id="@+id/ll_2"
            style="@style/main_menu_item_style">

            <ImageView
                style="@style/main_menu_icon_style"
                android:src="@mipmap/player2" />

            <TextView
                style="@style/main_menu_txt_style"
                android:text="电视直播" />
        </LinearLayout>

        <View style="@style/my_divider_vertical_1dp" />

        <LinearLayout
            android:id="@+id/ll_3"
            style="@style/main_menu_item_style">

            <ImageView
                style="@style/main_menu_icon_style"
                android:src="@mipmap/player3" />

            <TextView
                style="@style/main_menu_txt_style"
                android:text="在线FM" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider0"
        style="@style/my_divider_1dp"
        android:layout_below="@+id/ll_menu1" />

    <LinearLayout
        android:id="@+id/ll_menu2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/divider0"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_4"
            style="@style/main_menu_item_style">

            <ImageView
                style="@style/main_menu_icon_style"
                android:src="@mipmap/player4" />

            <TextView
                style="@style/main_menu_txt_style"
                android:text="微视频" />
        </LinearLayout>

        <View style="@style/my_divider_vertical_1dp" />

        <LinearLayout
            android:id="@+id/ll_5"
            style="@style/main_menu_item_style">

            <ImageView
                style="@style/main_menu_icon_style"
                android:src="@mipmap/player5" />

            <TextView
                style="@style/main_menu_txt_style"
                android:text="个人中心" />
        </LinearLayout>

        <View style="@style/my_divider_vertical_1dp" />

        <LinearLayout
            android:id="@+id/ll_6"
            style="@style/main_menu_item_style">

            <ImageView
                style="@style/main_menu_icon_style"
                android:src="@mipmap/player6" />

            <TextView
                style="@style/main_menu_txt_style"
                android:text="关于" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>